{
	"env": {
        "es2021": true,
		"browser": true,
        "node": true
    },
    "extends": [
		"eslint:recommended",
	    "plugin:prettier/recommended"
	],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "quotes": ["error", "single"],
        "semi": [ "error", "always"],
        "indent": ["error", "tab"]
    }
}
