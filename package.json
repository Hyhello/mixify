{
  "name": "mixify",
  "version": "0.0.3",
  "description": "Mixify is a lightweight preprocessor for business development.",
  "scss": "./index.scss",
  "less": "./index.less",
  "scripts": {
		"clean": "rimraf --glob *.{less,scss}",
    "build": "gulp -f ./scripts/build.mjs",
    "lint": "gulp -f ./scripts/lint.mjs",
    "prepublishOnly": "npm run build",
		"postpublish": "npm run clean",
    "gc": "bash ./scripts/gc.sh"
  },
  "keywords": [
    "less",
    "scss",
    "mixify",
		"mixins",
		"preprocessor"
  ],
  "files": [
    "*.scss",
    "*.less"
  ],
  "license": "MIT",
	"homepage": "https://hyhello.github.io/mixify/",
	"bugs": {
			"url": "https://github.com/Hyhello/mixify/issues"
	},
	"repository": {
			"type": "git",
			"url": "git+https://github.com/Hyhello/mixify.git"
	},
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "gulp": "^5.0.0",
    "gulp-stylelint": "^13.0.0",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended-less": "^3.0.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-formatter-pretty": "^3.1.0",
    "stylelint-less": "^3.0.1",
    "stylelint-scss": "^6.11.1"
  }
}
